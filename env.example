# ADGM Corporate Agent Environment Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# RAG Configuration
CHROMA_PERSIST_DIRECTORY=./data/vector_db
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# Application Configuration
DEBUG=False
LOG_LEVEL=INFO
MAX_FILE_SIZE=10485760  # 10MB in bytes

# ADGM Reference URLs (update with actual URLs)
ADGM_REGULATIONS_URL=https://adgm.com/regulations
ADGM_LEGAL_FRAMEWORK_URL=https://adgm.com/legal-framework
ADGM_DISPUTE_RESOLUTION_URL=https://adgm.com/dispute-resolution
